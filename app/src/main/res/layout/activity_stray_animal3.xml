<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrayAnimal3">

    <TextView
        android:id="@+id/location_animal3"
        android:layout_width="291dp"
        android:layout_height="59dp"
        android:text="Location: Taman Preston 3, Penang"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/description_animal3"
        app:layout_constraintTop_toBottomOf="@+id/description_animal3" />

    <TextView
        android:id="@+id/status_animal3"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Status: Sick"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/location_animal3"
        app:layout_constraintTop_toBottomOf="@+id/location_animal3" />

    <TextView
        android:id="@+id/neutered_animal3"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Neutered: Yes"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/status_animal3"
        app:layout_constraintTop_toBottomOf="@+id/status_animal3" />

    <TextView
        android:id="@+id/lastFeed_animal3"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:text="Last feed: 23/01/2022 2.10 p.m."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/neutered_animal3"
        app:layout_constraintTop_toBottomOf="@+id/neutered_animal3" />

    <Button
        android:id="@+id/update_current_situation3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="update_situation"
        android:text="Update Current Situation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastFeed_animal3" />

    <Button
        android:id="@+id/update_feeding_time3"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:onClick="update_time"
        android:text="Update Feeding Time"
        app:layout_constraintEnd_toEndOf="@+id/update_current_situation3"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/update_current_situation3"
        app:layout_constraintTop_toBottomOf="@+id/update_current_situation3" />

    <ImageView
        android:id="@+id/max"
        android:layout_width="236dp"
        android:layout_height="186dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/straydog1" />

    <TextView
        android:id="@+id/description_animal3"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:text="Description: 2 y/o, female, domestic dog"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name_animal3"
        app:layout_constraintTop_toBottomOf="@+id/name_animal3" />

    <TextView
        android:id="@+id/name_animal3"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:text="Name: Max"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/max"
        app:layout_constraintTop_toBottomOf="@+id/max" />

</androidx.constraintlayout.widget.ConstraintLayout>