<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrayAnimal2">

    <TextView
        android:id="@+id/status_animal2"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Status: Healthy"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/location_animal2"
        app:layout_constraintTop_toBottomOf="@+id/location_animal2" />

    <TextView
        android:id="@+id/neutered_animal2"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Neutered: No"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/status_animal2"
        app:layout_constraintTop_toBottomOf="@+id/status_animal2" />

    <TextView
        android:id="@+id/lastFeed_animal2"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:text="Last feed: 24/01/2022 6.20 p.m."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/neutered_animal2"
        app:layout_constraintTop_toBottomOf="@+id/neutered_animal2" />

    <Button
        android:id="@+id/update_current_situation2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="update_situation"
        android:text="Update Current Situation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastFeed_animal2" />

    <Button
        android:id="@+id/update_feeding_time2"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:onClick="update_time"
        android:text="Update Feeding Time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_current_situation2" />

    <ImageView
        android:id="@+id/milo"
        android:layout_width="268dp"
        android:layout_height="159dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/straycat4" />

    <TextView
        android:id="@+id/name_animal2"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Name: Milo"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/milo"
        app:layout_constraintTop_toBottomOf="@+id/milo" />

    <TextView
        android:id="@+id/description_animal2"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:text="Description: 6 months, female, domestic short hair, fierce"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name_animal2"
        app:layout_constraintTop_toBottomOf="@+id/name_animal2" />

    <TextView
        android:id="@+id/location_animal2"
        android:layout_width="295dp"
        android:layout_height="30dp"
        android:text="Location: Clan Jetties Georgetown"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/description_animal2"
        app:layout_constraintTop_toBottomOf="@+id/description_animal2" />
</androidx.constraintlayout.widget.ConstraintLayout>