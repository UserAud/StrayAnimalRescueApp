<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StrayAnimal4">

    <TextView
        android:id="@+id/name_animal4"
        android:layout_width="154dp"
        android:layout_height="35dp"
        android:text="Name: Twinky"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/Twinky"
        app:layout_constraintTop_toBottomOf="@+id/Twinky" />

    <TextView
        android:id="@+id/description_animal4"
        android:layout_width="290dp"
        android:layout_height="65dp"
        android:text="Description: Age unknown, male, domestic short hair"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/name_animal4"
        app:layout_constraintTop_toBottomOf="@+id/name_animal4" />

    <TextView
        android:id="@+id/location_animal4"
        android:layout_width="290dp"
        android:layout_height="31dp"
        android:text="Location: Nearby Queensbay"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/description_animal4"
        app:layout_constraintTop_toBottomOf="@+id/description_animal4" />

    <TextView
        android:id="@+id/status_animal4"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Status: Healthy"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/location_animal4"
        app:layout_constraintTop_toBottomOf="@+id/location_animal4" />

    <TextView
        android:id="@+id/neutered_animal4"
        android:layout_width="291dp"
        android:layout_height="37dp"
        android:text="Neutered: No"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/status_animal4"
        app:layout_constraintTop_toBottomOf="@+id/status_animal4" />

    <TextView
        android:id="@+id/lastFeed_animal4"
        android:layout_width="298dp"
        android:layout_height="66dp"
        android:text="Last feed: 24/01/2022 7.40 p.m."
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/neutered_animal4"
        app:layout_constraintTop_toBottomOf="@+id/neutered_animal4" />

    <Button
        android:id="@+id/update_current_situation4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="update_situation"
        android:text="Update Current Situation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastFeed_animal4" />

    <Button
        android:id="@+id/update_feeding_time4"
        android:layout_width="254dp"
        android:layout_height="48dp"
        android:onClick="update_time"
        android:text="Update Feeding Time"
        app:layout_constraintEnd_toEndOf="@+id/update_current_situation4"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/update_current_situation4"
        app:layout_constraintTop_toBottomOf="@+id/update_current_situation4" />

    <ImageView
        android:id="@+id/Twinky"
        android:layout_width="282dp"
        android:layout_height="178dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/straycat3" />
</androidx.constraintlayout.widget.ConstraintLayout>