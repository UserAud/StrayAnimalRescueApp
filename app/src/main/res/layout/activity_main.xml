<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <ImageView
            android:layout_width="0dp"
            android:layout_height="175dp" android:id="@+id/stray"
            android:contentDescription="@string/logo" tools:ignore="MissingConstraints"/>
    <TextView
            android:text="@string/stray_animals_rescue_app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/clickCounter"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/black" android:textSize="28sp"
            android:layout_marginEnd="40dp" android:layout_marginRight="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.598" android:contentDescription="@string/title"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/stray" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="73dp" android:layout_marginRight="73dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="72dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="100dp" android:layout_marginStart="100dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.377"
            android:contentDescription="@string/logo"/>
    <Button
            android:text="@string/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.732" app:backgroundTint="@color/cardview_dark_background"
            android:onClick="next"/>

</androidx.constraintlayout.widget.ConstraintLayout>