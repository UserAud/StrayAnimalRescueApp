<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".userchoice">

    <ImageView
            android:layout_width="96dp"
            android:layout_height="87dp" app:srcCompat="@drawable/donate" android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.825"
            app:layout_constraintVertical_bias="0.179"/>
    <ImageView
            android:layout_width="92dp"
            android:layout_height="104dp" app:srcCompat="@drawable/report" android:id="@+id/imageView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.828"
            app:layout_constraintVertical_bias="0.731"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="102dp" app:srcCompat="@drawable/adopt" android:id="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.798"
            app:layout_constraintVertical_bias="0.451"/>
    <TextView
            android:text="Bring home!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.806" app:layout_constraintVertical_bias="0.555"/>
    <TextView
            android:text="Report animals need to be rescued (injuries/sick etc)"
            android:layout_width="171dp"
            android:layout_height="48dp" android:id="@+id/textView9"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.915" app:layout_constraintVertical_bias="0.861"/>
    <TextView
            android:text="Hi Users, you may..."
            android:layout_width="188dp"
            android:layout_height="32dp" android:id="@+id/textView6"
            android:textSize="20sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.06"/>
    <Button
            android:text="Donate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.268" app:layout_constraintVertical_bias="0.206"
            android:onClick="choice1"/>
    <Button
            android:text="report "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.257" app:layout_constraintVertical_bias="0.719"
            android:onClick="choice3"/>
    <Button
            android:text="adopt"
            android:layout_width="91dp"
            android:layout_height="51dp" android:id="@+id/button5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.26" app:layout_constraintVertical_bias="0.451"
            android:onClick="choice2"/>
    <TextView
            android:text="Suppot us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.814" app:layout_constraintVertical_bias="0.32"/>
</androidx.constraintlayout.widget.ConstraintLayout>